{
  "name": "leetcode",
  "version": "1.0.0",
  "description": "leetcode solutions in js",
  "main": "index.js",
  "scripts": {
    "lint": "npx eslint **.js",
    "pretty": "npx prettier --write *.js",
    "stat": "ls -l | grep '[0-9][0-9]*.js$' | wc -l",
    "test": "jest --verbose ./tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LiewLi/leetcode.js.git"
  },
  "keywords": [
    "leetcode"
  ],
  "author": "LiewLi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LiewLi/leetcode.js/issues"
  },
  "homepage": "https://github.com/LiewLi/leetcode.js#readme",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "eslint": "^7.11.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.5",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "./*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
